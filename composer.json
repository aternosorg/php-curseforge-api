{
    "name": "aternos/curseforge-api",
    "description": "PHP Client for the CurseForge API.",
    "keywords": [
        "curseforge",
        "mods",
        "plugins",
        "php",
        "api"
    ],
    "homepage": "https://github.com/aternosorg/php-curseforge-api",
    "license": "MIT",
    "authors": [
        {
            "name": "Aternos GmbH",
            "homepage": "https://aternos.gmbh"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.4.5",
        "guzzlehttp/psr7": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.1"
    },
    "autoload": {
        "psr-4": { "Aternos\\CurseForgeApi\\" : "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Aternos\\CurseForgeApi\\Tests\\" : "tests/" }
    }
}
